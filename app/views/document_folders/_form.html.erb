<script>
	jQuery('#close-btn').click(function(){
  		$('#form-module').empty();
	});
</script>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="modal ec-modal">
				<div class="modal-header">
			    	<h3>Create Folder</h3>
			  	</div>
				<div class="modal-body">
			 		<%= form_for(@document_folder) do |f| %>
						<% if @document_folder.errors.any? %>
				    		<div id="error_explanation">
				      			<h2><%= pluralize(@document_folder.errors.count, "error") %> prohibited this document_folder from being saved:</h2>
				      			<ul>
							      <% @document_folder.errors.full_messages.each do |msg| %>
							        <li><%= msg %></li>
							      <% end %>
				      			</ul>
				    		</div>
				  		<% end %>
				  		<div class="field">
				    		<%= f.label :parent_folder_id %>
							<%= f.collection_select :parent_folder_id, current_user.document_folders.order(:name), :id, :name, include_blank: true %>
				  		</div>
					  	<div class="field">
					    	<%= f.label :name %>
					    	<%= f.text_field :name %>
					    	<%= f.hidden_field :user_id, value: current_user.id %>	
					  	</div>
				</div>
				<div class="modal-footer">
					<div id="close-btn" class="btn">
						Close
					</div>	
					<%= f.submit("Create Folder", :class=>"btn btn-success") %>
				</div>
					<% end %>
			</div>
		</div>
	</div>
</div>







