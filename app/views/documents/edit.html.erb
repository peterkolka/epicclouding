<%= link_to 'View File', @document, :class=>"btn" %> 
<%= link_to 'Back to Files', documents_path, :class=>"btn" %>

<%= form_for @document do |f|%>
	<div class="fields">
		<%=f.label :name%> 
		<%= f.text_field :name, style: "width: 500px"%>
	</div>
	<div class="field">
		<%= f.label :document_folder_id %>
		<%= f.collection_select :document_folder_id, current_user.document_folders.order(:name), :id, :name, include_blank: true %>
	</div>	
	<div class="fields">
		<%=f.label :description%> 
		<%= f.text_area :description, style: "width: 500px" %>
	</div>	
	<div class="fields">
		<%=f.label :public%> 
		<%= f.check_box :public%>
	</div>	

	<%= f.submit(:class=>"btn")%>
<%end%>