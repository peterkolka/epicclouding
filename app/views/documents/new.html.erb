<h1>New document</h1>

<%= form_for Document.new do |f|%>
	<%= f.label :file, "Upload file"%>
	<%= f.file_field :file, multiple: true, name: "document[file]" %>	
<%end%>

<div class="drop-zone" style="border: 2px solid red; height: 100px; width:100%">
	
</div>

<div id="documents"></div>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>

