<div class="row">
	<div class="span12">
		<h1><%=@user.name%></h1>
	</div>
</div>
				
<div class="row" style="margin-top:10px">
	<div class="span12">
		<div class="well">
			<div class="row">
				<div class="span2">
					<div class="padded">
						<h3 class="small" style="border-bottom:1px solid #DEDEDE; margin-bottom: 5px;">account</h3>
					<i class="icon-cog"></i> <%=link_to("Profiles")%> <br>								
					<i class="icon-file"></i><%=link_to("Files")%><br>
					<i class="icon-user"></i><%=link_to("Friends")%><br>
					<i class="icon-envelope"></i><%=link_to("Messages", messages_url)%>  <br>
					<i class="icon-tags"></i><%=link_to("Billing")%><br>																																							
					</div>
				</div>
				<div class="span9">
					<div class="well-border-left">

						  <h2>Update Profile</h2>
						<%= form_for(@user) do |f| %>
						  <% if @user.errors.any? %>
						    <div id="error_explanation">
						      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

						      <ul>
						      <% @user.errors.full_users.each do |msg| %>
						        <li><%= msg %></li>
						      <% end %>
						      </ul>
						    </div>
						  <% end %>


						<%=f.label :name%>
						<%=f.text_field( :name, :style=>"width: 75%" ) %>
						<%=f.label :avatar%>
						<%=f.file_field :avatar%>
						<%=f.label :about%>
						<%=f.text_area(:about, :style=>"width: 75%", rows: 10 )%>
						<%=f.label :password%>
						<%= f.password_field :password %>



						  <div class="actions">
						    <%= f.submit("Update",:class=>"btn btn-large") %>
						  </div>
						<% end %>
						
						
																																											
					
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



